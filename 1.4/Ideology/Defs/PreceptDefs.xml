        <defName>SHG_Supers_DislikedSuper</defName>
        <thoughtClass>Thought_Situational</thoughtClass>
        <workerClass>SuperHeroGenesBase.ThoughtWorker_Precept_HasRelatedGene</workerClass>
        <stages>
