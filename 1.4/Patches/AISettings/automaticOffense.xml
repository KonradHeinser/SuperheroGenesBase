<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="SuperHeroGenesBase.PatchOperationSetting">
        <setting>automaticOffense</setting>
        <active Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThinkTreeDef[defName="SHG_SuperAI"]/thinkRoot/subNodes/li/subNodes/li[1]/subNodes/li[2]/subNodes</xpath>
                    <value>
                        <li Class="SuperHeroGenesBase.ThinkNode_ConditionalUsingRangedWeapon">
                            <invert>true</invert>
                            <subNodes>
                                <li Class="ThinkNode_ConditionalHasAbility">
                                    <ability>SHG_HeroicLeap</ability>
                                    <subNodes>
                                        <li Class="SuperHeroGenesBase.JobGiver_AICastAbilityGoToTarget">
                                            <ability>SHG_HeroicLeap</ability>
                                        </li>
                                    </subNodes>
                                </li>
                                <li Class="ThinkNode_ConditionalHasAbility">
                                    <ability>SHG_Teleport</ability>
                                    <subNodes>
                                        <li Class="SuperHeroGenesBase.JobGiver_AICastAbilityGoToTarget">
                                            <ability>SHG_Teleport</ability>
                                        </li>
                                    </subNodes>
                                </li>
                                <li Class="ThinkNode_ConditionalHasAbility">
                                    <ability>Longjump</ability>
                                    <subNodes>
                                        <li Class="SuperHeroGenesBase.JobGiver_AICastAbilityGoToTarget">
                                            <ability>Longjump</ability>
                                        </li>
                                    </subNodes>
                                </li>
                            </subNodes>
                        </li>
                        <li Class="SuperHeroGenesBase.ThinkNode_ConditionalHasTargetNoFriendlyFire"> <!--Blast type size AoEs-->
                            <minRadius>5</minRadius>
                            <minEnemies>3</minEnemies>
                            <subNodes>
                                <li Class="SuperHeroGenesBase.JobGiver_AICastAnyOfAbilityOnEnemyTarget">
                                    <hashInterval>2</hashInterval> <!--Avoid AoE spam-->
                                    <abilities>
                                        <li>SHG_AcidBlast</li>
                                        <li>SHG_LightningBlast</li>
                                        <li>SHG_IceBlast</li>
                                        <li>SHG_PetrificationBlast</li>
                                        <li>SHG_Psionist_Asteroid</li>
                                    </abilities>
                                </li>
                            </subNodes>
                        </li>
                        <li Class="ThinkNode_ConditionalHasAbility" MayRequire="Sov.Homelander">
                            <ability>SHG_LaserEyes</ability>
                            <subNodes>
                                <li Class="SuperHeroGenesBase.ThinkNode_ConditionalHasTargetNoFriendlyFire" MayRequire="Sov.Homelander"> <!--Laser eyes-->
                                    <minRadius>2</minRadius>
                                    <avoidSelfHit>false</avoidSelfHit>
                                    <subNodes>
                                        <li Class="SuperHeroGenesBase.JobGiver_AICastAnyOfAbilityOnEnemyTarget" MayRequire="Sov.Homelander">
                                            <hashInterval>1</hashInterval> <!--Replaces normal attacks if the pawn has enough powers-->
                                            <abilities>
                                                <li>SHG_LaserEyes</li>
                                            </abilities>
                                        </li>
                                    </subNodes>
                                </li>
                            </subNodes>
                        </li>
                        <li Class="SuperHeroGenesBase.JobGiver_AICastAnyOfAbilityOnEnemyTarget"> <!--Single Target-->
                            <hashInterval>1</hashInterval> <!--Replaces normal attacks if the pawn has enough powers-->
                            <abilities>
                                <li>SHG_ThrowSpike</li>
                                <li>SHG_AcidBolt</li>
                                <li>SHG_LightningBolt</li>
                                <li>SHG_IceBolt</li>
                                <li>SHG_PetrificationBolt</li>
                                <li>SHG_Hemomancer_Drain</li>
                                <li>SHG_Hemomancer_Reap</li>
                                <li>SHG_Hemomancer_BloodSpear</li>
                            </abilities>
                        </li>
                    </value>
                </li>
                <li Class="SuperHeroGenesBase.PatchOperationSetting">
                    <setting>automaticOffenseDrafted</setting>
                    <active Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThinkTreeDef[defName="SHG_SuperAI"]/thinkRoot/subNodes/li/subNodes/li[2]/subNodes/li[1]/subNodes</xpath>
                                <value>
                                    <li Class="SuperHeroGenesBase.ThinkNode_ConditionalUsingRangedWeapon">
                                        <invert>true</invert>
                                        <subNodes>
                                            <li Class="ThinkNode_ConditionalHasAbility">
                                                <ability>SHG_HeroicLeap</ability>
                                                <subNodes>
                                                    <li Class="SuperHeroGenesBase.JobGiver_AICastAbilityGoToTarget">
                                                        <ability>SHG_HeroicLeap</ability>
                                                    </li>
                                                </subNodes>
                                            </li>
                                            <li Class="ThinkNode_ConditionalHasAbility">
                                                <ability>SHG_Teleport</ability>
                                                <subNodes>
                                                    <li Class="SuperHeroGenesBase.JobGiver_AICastAbilityGoToTarget">
                                                        <ability>SHG_Teleport</ability>
                                                    </li>
                                                </subNodes>
                                            </li>
                                            <li Class="ThinkNode_ConditionalHasAbility">
                                                <ability>Longjump</ability>
                                                <subNodes>
                                                    <li Class="SuperHeroGenesBase.JobGiver_AICastAbilityGoToTarget">
                                                        <ability>Longjump</ability>
                                                    </li>
                                                </subNodes>
                                            </li>
                                        </subNodes>
                                    </li>
                                    <li Class="SuperHeroGenesBase.ThinkNode_ConditionalHasTargetNoFriendlyFire"> <!--Blast type size AoEs-->
                                        <minRadius>5</minRadius>
                                        <minEnemies>3</minEnemies>
                                        <subNodes>
                                            <li Class="SuperHeroGenesBase.JobGiver_AICastAnyOfAbilityOnEnemyTarget">
                                                <hashInterval>2</hashInterval> <!--Avoid AoE spam-->
                                                <abilities>
                                                    <li>SHG_AcidBlast</li>
                                                    <li>SHG_LightningBlast</li>
                                                    <li>SHG_IceBlast</li>
                                                    <li>SHG_PetrificationBlast</li>
                                                    <li>SHG_Psionist_Asteroid</li>
                                                </abilities>
                                            </li>
                                        </subNodes>
                                    </li>
                                    <li Class="ThinkNode_ConditionalHasAbility" MayRequire="Sov.Homelander">
                                        <ability>SHG_LaserEyes</ability>
                                        <subNodes>
                                            <li Class="SuperHeroGenesBase.ThinkNode_ConditionalHasTargetNoFriendlyFire" MayRequire="Sov.Homelander"> <!--Laser eyes-->
                                                <minRadius>2</minRadius>
                                                <avoidSelfHit>false</avoidSelfHit>
                                                <subNodes>
                                                    <li Class="SuperHeroGenesBase.JobGiver_AICastAnyOfAbilityOnEnemyTarget" MayRequire="Sov.Homelander">
                                                        <hashInterval>1</hashInterval> <!--Replaces normal attacks if the pawn has enough powers-->
                                                        <abilities>
                                                            <li>SHG_LaserEyes</li>
                                                        </abilities>
                                                    </li>
                                                </subNodes>
                                            </li>
                                        </subNodes>
                                    </li>
                                    <li Class="SuperHeroGenesBase.JobGiver_AICastAnyOfAbilityOnEnemyTarget"> <!--Single Target-->
                                        <hashInterval>1</hashInterval> <!--Replaces normal attacks if the pawn has enough powers-->
                                        <abilities>
                                            <li>SHG_ThrowSpike</li>
                                            <li>SHG_AcidBolt</li>
                                            <li>SHG_LightningBolt</li>
                                            <li>SHG_IceBolt</li>
                                            <li>SHG_PetrificationBolt</li>
                                            <li>SHG_Hemomancer_Drain</li>
                                            <li>SHG_Hemomancer_Reap</li>
                                            <li>SHG_Hemomancer_BloodSpear</li>
                                        </abilities>
                                    </li>
                                </value>
                            </li>
                        </operations>
                    </active>
                </li>
            </operations>
        </active>
    </Operation>
</Patch>

