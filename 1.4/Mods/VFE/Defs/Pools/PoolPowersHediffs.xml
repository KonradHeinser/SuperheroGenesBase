<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef>
        <defName>SHG_Pools_HealAllies</defName>
        <label>healing</label>
        <description>This super is providing their regeneration abilities to everyone around them for a day. In addition to sacrificing the superhero base's healing for a time, the body will be unable to repair damage dealt to it, though the superclotting effects will still remain, if the superhero has a gene that provides one.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <isBad>False</isBad>
		<initialSeverity>1.0</initialSeverity>
        <stages>
            <li>
                <minSeverity>0.001</minSeverity>
                <statFactors>
                    <ImmunityGainSpeed>0.333</ImmunityGainSpeed>
                    <InjuryHealingFactor>0</InjuryHealingFactor>
                    <LifespanFactor>0.333</LifespanFactor>
                </statFactors>
                <statOffsets>
                    <ToxicEnvironmentResistance>-.1</ToxicEnvironmentResistance>
                    <ToxicResistance>-.1</ToxicResistance>
                </statOffsets>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-1</severityPerDay>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
            <li Class="HediffCompProperties_GiveHediffsInRange">
                <range>10</range>
                <mote>SHG_Mote_Healing</mote>
                <hideMoteWhenNotDrafted>true</hideMoteWhenNotDrafted>
                <targetingParameters>
                    <canTargetBuildings>false</canTargetBuildings>
                    <canTargetAnimals>false</canTargetAnimals>
                    <canTargetMechs>false</canTargetMechs>
                    <onlyTargetColonists>true</onlyTargetColonists>
                </targetingParameters>
                <hediff>SHG_Pools_HealAllies_Buff</hediff>
            </li>
        </comps>
    </HediffDef>

    <ThingDef ParentName="MoteBase">
        <defName>SHG_Mote_Healing</defName>
        <thingClass>MoteAttached</thingClass>
        <altitudeLayer>LightingOverlay</altitudeLayer>
        <drawOffscreen>true</drawOffscreen>
        <mote>
            <solidTime>9999999</solidTime>
            <needsMaintenance>true</needsMaintenance>
        </mote>
        <graphicData>
            <graphicClass>Graphic_Mote</graphicClass>
            <texPath>Things/Mote/CombatCommandMask</texPath>
            <shaderType>MoteGlow</shaderType>
            <color>(72, 119, 72)</color>
            <drawSize>10</drawSize>
        </graphicData>
    </ThingDef>

    <HediffDef ParentName="RoleStatBuff">
        <defName>SHG_Pools_HealAllies_Buff</defName>
        <label>healing</label>
        <description>A nearby super is healing the wounds of everyone around them. To keep this benefit, it is best to stick close to the super.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <isBad>false</isBad>
        <stages>
            <li>
                <totalBleedFactor>0.25</totalBleedFactor>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
            <li Class="HediffCompProperties_Disappears">
                <showRemainingTime>false</showRemainingTime>
            </li>
            <li Class="AnimalBehaviours.HediffCompProperties_Regeneration">
                <rateInTicks>100</rateInTicks>
                <healAmount>0.01</healAmount>
            </li>
            <li Class="HediffCompProperties_Link">
                <requireLinkOnOtherPawn>false</requireLinkOnOtherPawn>
                <maxDistance>10</maxDistance>
                <customMote>Mote_CombatCommandLinkLine</customMote>
            </li>
        </comps>
    </HediffDef>

    <HediffDef>
        <defName>SHG_Pools_WindStep</defName>
		<label>wind step</label>
		<description>This super is clumsily floating just a little bit off the ground, allowing them to move over all obstacles without issue with some minor mobility issues.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
        <stages>
            <li>
                <statFactors>
                    <StaggerDurationFactor>1.333</StaggerDurationFactor>
                </statFactors>
                <statOffsets>
                    <MoveSpeed>-5</MoveSpeed>
                    <AimingDelayFactor>.1</AimingDelayFactor>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                </capMods>
            </li>
        </stages>
		<comps>
			<li Class="AnimalBehaviours.HediffCompProperties_Floating" />
		</comps>
	</HediffDef>
</Defs>


