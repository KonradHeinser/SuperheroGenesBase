                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <offset>-1.0</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.99</minSeverity>
		        <label>wearing off</label>
                <statFactors>
                    <InjuryHealingFactor>5</InjuryHealingFactor>
                    <ImmunityGainSpeed>5</ImmunityGainSpeed>
                </statFactors>
            </li>
            <li>
                <minSeverity>0.995</minSeverity>
                <statFactors>
                    <InjuryHealingFactor>10</InjuryHealingFactor>
                    <ImmunityGainSpeed>10</ImmunityGainSpeed>
                </statFactors>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.1</severityPerDay>
            </li>
			<li Class="AnimalBehaviours.HediffCompProperties_Regeneration">
				<rateInTicks>100</rateInTicks>
                <healAmount>0.01</healAmount>
			</li>
