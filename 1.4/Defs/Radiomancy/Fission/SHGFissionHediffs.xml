    <HediffDef>
        <defName>SHG_Radiomancer_Mutate</defName>       
        <label>mutating</label>
        <description>This pawn will generate new genes once you STOP LOOKING AT DEVMODE STUFF AND UNPAUSE YOU CHEATER. Unless you're a fellow modder, in which case welcome! You won't get much use from this tooltip, but the SHGFissionHediffs.xml file contains the randomization data for the mutating hediff.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <stages>
			<li>
                <becomeVisible>false</becomeVisible>
            </li>
        </stages>
        <comps>
            <li Class="SuperHeroGenesBase.HediffCompProperties_GainRandomGeneSet">
                <showMessage>False</showMessage>
                <geneSets>
                    <li><geneSet><li>SHG_DoubleHearted</li></geneSet></li>
                    <li><geneSet><li>SHG_SuperPsychicPotential</li></geneSet></li>
                    <li><geneSet><li>SHG_SuperDenseBones</li></geneSet></li>
                    <li><geneSet><li>SHG_Blindsight</li></geneSet></li>
                    <li><geneSet><li>SHG_GhostlyPresence</li></geneSet></li>
                    <li><geneSet><li>SHG_Prey</li></geneSet></li>
                    <li><geneSet><li>SHG_Predator</li></geneSet></li>
                    <li><geneSet><li>SHG_AdrenalineJunkie</li></geneSet></li>
                    <li><geneSet><li>SHG_Berserker</li></geneSet></li>
                    <li><geneSet><li>SHG_MadGenius</li></geneSet></li>
                    <li><geneSet><li>SHG_Technophile</li></geneSet></li>
                    <li><geneSet><li>SHG_Naturalist</li></geneSet></li>
                    <li><geneSet><li>SHG_HALK</li></geneSet></li>
                </geneSets>
            </li>
        </comps>
    </HediffDef>

    <HediffDef>
        <defName>SHG_Radiomancer_ReverseAging</defName>
        <label>reverse aging</label>
        <description>This pawn is gradually becoming younger.</description>
        <everCurableByItem>false</everCurableByItem>
        <initialSeverity>1</initialSeverity>
        <hediffClass>HediffWithComps</hediffClass>
        <scenarioCanAdd>false</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <stages />
        <comps>
            <li Class="SuperHeroGenesBase.HediffCompProperties_Aging">
                <ageChangePerHour>-1</ageChangePerHour>
            </li>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>2500</disappearsAfterTicks>
                <showRemainingTime>true</showRemainingTime>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
        </comps>
    </HediffDef>

    <HediffDef>
        <defName>SHG_Radiomancer_RefocusEnergy_Wakefulness</defName>
        <label>refocus energy</label>
        <description>This pawn is feeling more awake due to an extra pocket of energy refreshes their body constantly.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <stages>
            <li>
                <statFactors>
                    <RestFallRateFactor>0.8</RestFallRateFactor>
                </statFactors>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.25</severityPerDay>
                <showDaysToRecover>true</showDaysToRecover>
            </li>
        </comps>
    </HediffDef>

    <HediffDef>
        <defName>SHG_Radiomancer_RefocusEnergy_Sleepy</defName>
        <label>refocus energy</label>
        <description>This pawn is feeling very sleepy after generating a bunch of energy by draining their body's reserves.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <stages>
            <li>
                <statFactors>
                    <RestFallRateFactor>1.25</RestFallRateFactor>
                </statFactors>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.25</severityPerDay>
                <showDaysToRecover>true</showDaysToRecover>
            </li>
        </comps>
    </HediffDef>
</Defs>
