<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <AbilityDef Abstract="true" Name="SHGPowerBlastBase" ParentName="SHGPowerAbilitiesBase">
        <verbProperties>
            <range>20</range>
            <targetParams>
                <canTargetLocations>true</canTargetLocations>
            </targetParams>
        </verbProperties>
    </AbilityDef>

    <AbilityDef ParentName="SHGPowerBlastBase">
        <defName>SHG_FireBlast</defName>
        <label>fire blast</label>
        <description>Toss a ball of summoned fire that will burn everything in the area it lands.</description>
        <iconPath>Powers/Gene_FireBall</iconPath>
        <comps>
            <li Class="CompProperties_AbilitySprayLiquid">
                <projectileDef>SHG_Proj_Blast_Fire</projectileDef>
                <numCellsToHit>9</numCellsToHit>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="SHGPowerBlastBase">
        <defName>SHG_AcidBlast</defName>
        <label>acid blast</label>
        <description>Toss a ball of summoned acid that will leave corrosive substance in a wide area wherever it lands.</description>
        <iconPath>Powers/Gene_AcidBall</iconPath>
        <comps>
            <li Class="CompProperties_AbilitySprayLiquid">
                <projectileDef>SHG_Proj_Blast_Acid</projectileDef>
                <numCellsToHit>9</numCellsToHit>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="SHGPowerBlastBase">
        <defName>SHG_LightningBlast</defName>
        <label>lightning blast</label>
        <description>Toss a ball of summoned lightning that will electrocute everything in an area. The damage is too destructive to cause an EMP effect</description>
        <iconPath>Powers/Gene_LightningBall</iconPath>
        <comps>
            <li Class="CompProperties_AbilitySprayLiquid">
                <projectileDef>SHG_Proj_Blast_Lightning</projectileDef>
                <numCellsToHit>9</numCellsToHit>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="SHGPowerBlastBase">
        <defName>SHG_IceBlast</defName>
        <label>ice blast</label>
        <description>Toss a ball of summoned ice that inflicts debilitating frostbite.</description>
        <iconPath>Powers/Gene_IceBall</iconPath>
        <comps>
            <li Class="CompProperties_AbilitySprayLiquid">
                <projectileDef>SHG_Proj_Blast_Ice</projectileDef>
                <numCellsToHit>9</numCellsToHit>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="SHGPowerBlastBase">
        <defName>SHG_ToxBlast</defName>
        <label>toxic blast</label>
        <description>Toss a ball of summoned poison that creates a cloud that inflicts toxic buildup.</description>
        <iconPath>Powers/Gene_ToxicBall</iconPath>
        <comps>
            <li Class="CompProperties_AbilitySprayLiquid">
                <projectileDef>SHG_Proj_Blast_Toxic</projectileDef>
                <numCellsToHit>9</numCellsToHit>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="SHGPowerBlastBase">
        <defName>SHG_EMPBlast</defName>
        <label>emp blast</label>
        <description>Toss a ball of summoned electricity that will disable electronics in an area for a while.</description>
        <iconPath>Powers/Gene_LightningBall</iconPath>
        <comps>
            <li Class="CompProperties_AbilitySprayLiquid">
                <projectileDef>SHG_Proj_Blast_EMP</projectileDef>
                <numCellsToHit>9</numCellsToHit>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="SHGPowerBlastBase">
        <defName>SHG_FoamBlast</defName>
        <label>foam blast</label>
        <description>Toss a ball of summoned foam that stops all fires from passing.</description>
        <iconPath>Powers/Gene_FoamBall</iconPath>
        <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
        <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
        <comps>
            <li Class="CompProperties_AbilitySprayLiquid">
                <projectileDef>SHG_Proj_Blast_Foam</projectileDef>
                <numCellsToHit>9</numCellsToHit>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="SHGPowerBlastBase">
        <defName>SHG_PetrificationBlast</defName>
        <label>petrification blast</label>
        <description>Toss a ball of infused stone that invades the bloodstreams of everyone at the explosion sight. People will not become completely petrified by a single blast, and any pawns with a larger body size or innate blunt armor will be somewhat resistant to petrification.</description>
        <iconPath>Powers/Gene_PetrificationBall</iconPath>
        <comps>
            <li Class="CompProperties_AbilitySprayLiquid">
                <projectileDef>SHG_Proj_Blast_Petrification</projectileDef>
                <numCellsToHit>9</numCellsToHit>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="SHGPowerBlastBase">
        <defName>SHG_WaterBlast</defName>
        <label>water blast</label>
        <description>Toss a ball of pressurized water that causes some damage on explosion and puts out fires. This also leaves a weird watery foam on the target that makes them feel uncomfortable, while also creating a firefoam-like layer over their body that prevents them from catching fire again for a time.</description>
        <iconPath>Powers/Gene_WaterBall</iconPath>
        <statBases>
            <Ability_EffectRadius>1.5</Ability_EffectRadius>
        </statBases>
        <comps>
            <li Class="CompProperties_AbilitySprayLiquid">
                <projectileDef>SHG_Proj_Blast_Water</projectileDef>
                <numCellsToHit>9</numCellsToHit>
            </li>
            <li Class = "CompProperties_AbilityWaterskip" />
        </comps>
    </AbilityDef>
</Defs>
