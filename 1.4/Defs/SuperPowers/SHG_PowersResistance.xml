        <displayOrderInCategory>1</displayOrderInCategory>
        <damageFactors>
            <SHG_Lightning>0</SHG_Lightning>
            <AG_Electric MayRequire="sarg.alphagenes">0</AG_Electric>
        </damageFactors>
        <biostatMet>-2</biostatMet>
        <symbolPack>
            <prefixSymbols>
                <li><symbol>insulated</symbol></li>
                <li><symbol>rubber</symbol></li>
            </prefixSymbols>
        </symbolPack>
