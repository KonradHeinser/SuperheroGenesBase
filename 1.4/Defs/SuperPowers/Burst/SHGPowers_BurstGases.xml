            <color>(0.2,0.8,0.2,0.5)</color>
        </graphicData>
        <gas>
            <expireSeconds>
                <min>4</min>
                <max>5</max>
            </expireSeconds>
        </gas>
    </ThingDef>

    <ThingDef ParentName="SHG_BaseGas">
        <defName>SHG_ElectricrifiedCloud</defName>
