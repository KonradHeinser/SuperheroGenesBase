<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="SHG_BaseGas" Abstract="True">
        <graphicData>
            <texPath>Things/Gas/Puff</texPath>
            <drawSize>2.2</drawSize>
        </graphicData>
		<thingClass>Gas</thingClass>
		<label>gas</label>
		<category>Gas</category>
		<altitudeLayer>Gas</altitudeLayer>
		<useHitPoints>false</useHitPoints>
		<tickerType>Normal</tickerType>
		<graphicData>
			<graphicClass>Graphic_Gas</graphicClass>
			<shaderType>Transparent</shaderType>
		</graphicData>
        <gas>
            <rotationSpeed>10</rotationSpeed>
        </gas>
	</ThingDef>

    <ThingDef ParentName="SHG_BaseGas">
        <defName>SHG_AcidGas</defName>
        <label>acid mist</label>
        <graphicData>
            <color>(0.2,0.8,0.2)</color>
        </graphicData>
        <gas>
            <expireSeconds>
                <min>2</min>
                <max>3</max>
            </expireSeconds>
        </gas>
    </ThingDef>

    <ThingDef ParentName="SHG_BaseGas">
