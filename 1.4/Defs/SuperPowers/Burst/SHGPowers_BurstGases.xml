            <color>(0.4,0.6,0.7,0.5)</color>
        </graphicData>
        <gas>
            <expireSeconds>
                <min>1</min>
                <max>1</max>
            </expireSeconds>
        </gas>
    </ThingDef>

    <ThingDef ParentName="SHG_BaseGas">
        <defName>SHG_IceCloud</defName>
        <label>freezing cloud</label>
