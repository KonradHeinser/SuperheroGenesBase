<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneDef ParentName="SuperPowersHemoShifterBase">
        <defName>SHG_Hemomancer_Shifter</defName>
        <label>hemoshifter</label>
        <description>Hemoshifters use hemogen to slightly alter their body's makeup to copy the characteristics of animals without altering their appearance.</description>
        <iconPath>Hemomancer/Shifter/Gene_Hemomancer_Shifter</iconPath>
        <geneClass>SuperHeroGenesBase.HediffAdder</geneClass>
        <displayOrderInCategory>0</displayOrderInCategory>
        <customEffectDescriptions>
            <li>Effects scale with proficiency.</li>
        </customEffectDescriptions>
        <statOffsets>
            <SHG_HemomancyProficiency>0.5</SHG_HemomancyProficiency>
        </statOffsets>
        <exclusionTags>
            <li>SHG_HemomancerShifter</li>
        </exclusionTags>
    </GeneDef>

    <GeneDef ParentName="SuperPowersHemoShifterBase">
        <defName>SHG_Hemomancer_Turtle</defName>
