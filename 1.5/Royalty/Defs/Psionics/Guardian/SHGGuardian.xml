<Defs>
    <GeneDef ParentName="SuperPowersPsychicGuardianBase">
        <defName>SHG_Psionist_Guardian</defName>
        <label>psionic guardian</label>
        <description>Psionic Guardians create a constant psychic aura around themselves that provides very small, but constant, bonuses to all nearby allies. They do not benefit from their own auras.</description>
        <prerequisite>SHG_Archetypes_Psionist</prerequisite>
        <iconPath>Psionist/Guardian/Gene_Psionist_Guardian</iconPath>
        <geneClass>SuperHeroGenesBase.HediffAdder</geneClass>
        <displayOrderInCategory>0</displayOrderInCategory>
        <statFactors>
            <MeditationFocusGain>2.0</MeditationFocusGain>
        </statFactors>
        <exclusionTags>
            <li>SHG_PsionicGuardian</li>
        </exclusionTags>
        <modExtensions>
			<li Class="SuperHeroGenesBase.SHGExtension">
                <hediffsToApply><li><hediff>SHG_Psionist_Guardian_Base</hediff></li></hediffsToApply>
			</li>
		</modExtensions>
    </GeneDef>

