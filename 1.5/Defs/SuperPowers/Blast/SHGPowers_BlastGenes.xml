<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneDef ParentName="SuperPowersFireBase">
        <defName>SHG_FireBlast</defName>
        <label>fire blast</label>
        <description>Supers with this power are able to summon a ball of fire that explodes to leave fuel all over the ground.\n\nThis doesn't render you immune to fire, so remember to get protection.</description>
        <iconPath>Powers/Gene_FireBall</iconPath>
        <displayOrderInCategory>1</displayOrderInCategory>
        <abilities>
            <li>SHG_FireBlast</li>
        </abilities>
        <descriptionHyperlinks>
            <AbilityDef>SHG_FireBlast</AbilityDef>
        </descriptionHyperlinks>
        <exclusionTags>
            <li>Archetypes_PyromancerFireBlast</li>
        </exclusionTags>
    </GeneDef>

    <GeneDef ParentName="SuperPowersAcidBase">
        <defName>SHG_AcidBlast</defName>
        <label>acid blast</label>
        <description>Supers with this power are able to summon a blob of acid that explodes to leave a burning feeling on the skin.\n\nThis doesn't render you immune to acid, so remember to get protection.</description>
        <iconPath>Powers/Gene_AcidBall</iconPath>
        <displayOrderInCategory>11</displayOrderInCategory>
        <abilities>
            <li>SHG_AcidBlast</li>
