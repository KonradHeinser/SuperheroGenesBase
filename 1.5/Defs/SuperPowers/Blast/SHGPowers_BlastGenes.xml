    <GeneDef ParentName="SuperPowersLightningBase">
        <defName>SHG_LightningBlast</defName>
        <label>lightning blast</label>
        <description>Supers with this power are able to summon a ball of lightning that explodes to cause damage to both flesh and electronics.</description>
        <iconPath>Powers/Gene_LightningBall</iconPath>
        <displayOrderInCategory>21</displayOrderInCategory>
        <abilities>
            <li>SHG_LightningBlast</li>
