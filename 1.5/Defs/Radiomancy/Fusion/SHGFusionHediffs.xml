                    <ImmunityGainSpeed>3</ImmunityGainSpeed>
                    <IncomingDamageFactor>0.50</IncomingDamageFactor>
                </statFactors>
            </li>
        </stages>
        <comps>
            <li Class="SuperHeroGenesBase.HediffCompProperties_SeverityByLightLevel">
                <lightToSeverityCurve>
                    <points>
                        <li>(0, 0.9)</li>
                        <li>(0.6, 1)</li>
                    </points>
                </lightToSeverityCurve>
                <timeToSeverityCurve>
                    <points>
                        <li>(0, 0.9)</li>
                        <li>(0.3, 1)</li>
                        <li>(0.7, 1)</li>
                        <li>(1, 0.9)</li>
                    </points>
                </timeToSeverityCurve>
            </li>
        </comps>
    </HediffDef>
</Defs>
